{
    "name": "ceddyg/clara",
    "description": "The Ceddy's Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "5.4.*",
        "almasaeed2010/adminlte": "~2.0",
        "cartalyst/sentinel": "2.0.*",
        "barryvdh/laravel-debugbar": "^2.1",
        "barryvdh/laravel-ide-helper": "^2.1",
        "patricktalmadge/bootstrapper": "~5",
        "adamwathan/bootforms": "^0.8.0",
        "doctrine/dbal": "^2.5",
        "ceddyg/clara-dataflow": "^1.1",
        "ceddyg/clara-entity-generator": "^1.0",
        "ceddyg/clara-installer": "^1.0",
        "ceddyg/query-builder-repository": "^1.2"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate",
            "php artisan vendor:publish --provider='App\\Providers\\AppServiceProvider' --force"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan ide-helper:generate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
